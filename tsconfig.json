{
  "compilerOptions": {
    "target": "ES2015",
    "module": "ES2015",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "outDir": "./",
    "rootDir": "./src",
    "lib": ["DOM", "ES2015"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.test.*"]
}
